<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/widget_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/app_widget_layout_id">

    <TextView
        android:padding="5dp"
        android:textColor="@color/lighter_gray"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_app_widget_timestamp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:padding="5dp"
        android:textColor="@color/lighter_gray"
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/tv_app_widget_note" />

</LinearLayout><!-- From: file:/C:/Users/Marcus%20Jacobsson/Dropbox/Development/Android%20Studio%20Workspace/Eaglenote%20git/app/src/main/res/layout/app_widget.xml -->