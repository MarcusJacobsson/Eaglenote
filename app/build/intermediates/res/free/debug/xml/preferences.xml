<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/preferences_category_list_title"
        android:key="pref_key_list_settings">

        <CheckBoxPreference
            android:key="pref_key_show_timestamp_list"
            android:summary="@string/preferences_checkbox_list_timestamp_summary"
            android:title="@string/preferences_checkbox_list_timestamp_title"
            android:defaultValue="true" />

        <ListPreference
            android:key="pref_key_list_sort_order"
            android:title="@string/preferences_list_sort_order_title"
            android:entries="@array/preference_sort_order_array"
            android:entryValues="@array/preference_sort_order_array_values"
            android:defaultValue="titleASC" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preferences_category_general"
        android:key="pref_key_general">

        <ListPreference
            android:key="pref_key_general_text_size"
            android:title="@string/preferences_general_text_size_title"
            android:entries="@array/preference_text_size_array"
            android:entryValues="@array/preference_text_size_array_values"
            android:defaultValue="14" />

        <ListPreference
            android:key="pref_key_general_text_style"
            android:title="@string/preferences_general_text_style_title"
            android:entries="@array/preferences_general_text_style_array"
            android:entryValues="@array/preferences_general_text_style_array_values"
            android:defaultValue="Default" />

    </PreferenceCategory>
</PreferenceScreen><!-- From: file:/C:/Users/Marcus%20Jacobsson/Dropbox/Development/Android%20Studio%20Workspace/Eaglenote%20git/app/src/main/res/xml/preferences.xml -->