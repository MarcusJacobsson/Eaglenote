<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>

        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="background">@android:color/black</item>
        <item name="actionBarDivider">@android:color/black</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


    <style parent="android:Widget.CompoundButton.CheckBox" name="CheckBoxAppTheme">

        <item name="android:button">@drawable/apptheme_btn_check_holo_dark</item>

    </style>
</resources>
